#!/usr/bin/env bash

ETC_DIR="M4_ETC_DIR"

usage() {
  cat <<EOF
Usage: me-conf-view <conf_dir> <conf>

Arguments:
  conf_dir    Configuration directory
  conf        Configuration file
EOF
}

view_conf() {
  if ! me conf-dir-list | grep -E "^$1$" &>/dev/null; then
    echo "Configuration directory '$1' doesn't exist."
    exit 1
  fi

  if ! me conf-list "$1" | grep -E "^$2$" &>/dev/null; then
    echo "Configuration file '$2' doesn't exist."
    exit 1
  fi

  cat "${ETC_DIR}/me-$1.d/$2.conf"
}

case $1 in
  '' ) usage ;;
  *  ) view_conf "$1" "$2" ;;
esac
